generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PaymentMethod {
  CARD
  CASH
}

enum AssetType {
  CASH
  SAVING
  BANK
}

model Card {
  id            String    @id @default(uuid()) @db.Uuid
  name          String
  limit         Decimal   @db.Decimal(12, 2)
  currentDebt   Decimal   @default(0) @db.Decimal(12, 2)
  statementDate Int
  dueDate       Int
  createdAt     DateTime  @default(now())

  expenses      Expense[]
  payments      Payment[]

  @@map("cards")
}

model Expense {
  id            String        @id @default(uuid()) @db.Uuid
  amount        Decimal       @db.Decimal(12, 2)
  category      String
  description   String?
  date          DateTime
  paymentMethod PaymentMethod
  cardId        String?       @db.Uuid
  createdAt     DateTime      @default(now())

  card          Card?         @relation(fields: [cardId], references: [id], onDelete: SetNull)

  @@index([date])
  @@index([category])
  @@index([cardId])
  @@map("expenses")
}

model Payment {
  id        String   @id @default(uuid()) @db.Uuid
  amount    Decimal  @db.Decimal(12, 2)
  date      DateTime
  cardId    String   @db.Uuid
  createdAt DateTime @default(now())

  card      Card     @relation(fields: [cardId], references: [id], onDelete: Restrict)

  @@index([date])
  @@index([cardId])
  @@map("payments")
}

model Asset {
  id        String   @id @default(uuid()) @db.Uuid
  type      AssetType
  amount    Decimal  @db.Decimal(12, 2)
  createdAt DateTime @default(now())

  @@index([type])
  @@map("assets")
}
